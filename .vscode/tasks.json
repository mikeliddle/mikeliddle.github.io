{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --future --config _config.yml,_debug.yml -d _site",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Install Dependencies"
            ],
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "bundle exec jekyll build",
            "dependsOn": [
                "Install Dependencies"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf _site",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "bundle install",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}